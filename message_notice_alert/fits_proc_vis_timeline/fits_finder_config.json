{
    "search_directories": [
        "E:/kats_process/gy1",
        "E:/kats_process/gy2",
        "E:/kats_process/gy3",
        "E:/kats_process/gy4",
        "E:/kats_process/gy5",
        "E:/kats_process/gy6"
    ],
    "file_patterns": [
        {
            "type": "regex",
            "pattern": ".*\\.(fits\\.axy|diff1\\.fits|fixedsrc\\.cat|mo\\.cat|fit)$|.*_pp\\.fits$",
            "case_sensitive": false,
            "description": "所有目标文件类型"
        }
    ],
    "options": {
        "recursive_search": true,
        "max_results": 500000,
        "exclude_patterns": [
            "*.tmp",
            "*.bak",
            "*.log"
        ],
        "file_size_limits": {
            "min_size_mb": 0,
            "max_size_mb": 1000
        },
        "path_filters": [
            {
                "type": "contains",
                "pattern": "/temp/",
                "case_sensitive": false,
                "description": "过滤临时目录"
            },
            {
                "type": "contains",
                "pattern": "/backup/",
                "case_sensitive": false,
                "description": "过滤备份目录"
            }
        ],
        "path_includes": [
            {
                "type": "regex",
                "pattern": "\\d{8}/K\\d{3}/redux/GY\\d_K\\d{3}-.*?\\.fits\\.axy$",
                "case_sensitive": false,
                "description": "搜索.fits.axy文件",
                "file_type": "axy"
            },
            {
                "type": "regex",
                "pattern": "\\d{8}/K\\d{3}/redux/GY\\d_K\\d{3}-.*?\\.diff1\\.fits$",
                "case_sensitive": false,
                "description": "搜索.diff1.fits文件",
                "file_type": "diff1"
            },
            {
                "type": "regex",
                "pattern": "\\d{8}/K\\d{3}/redux/GY\\d_K\\d{3}-.*?\\.fixedsrc\\.cat$",
                "case_sensitive": false,
                "description": "搜索.fixedsrc.cat文件",
                "file_type": "fixedsrc"
            },
            {
                "type": "regex",
                "pattern": "\\d{8}/K\\d{3}/redux/GY\\d_K\\d{3}-.*?\\.mo\\.cat$",
                "case_sensitive": false,
                "description": "搜索.mo.cat文件",
                "file_type": "mo"
            },
            {
                "type": "regex",
                "pattern": "\\d{8}/K\\d{3}/GY\\d_K\\d{3}-.*?\\.fit$",
                "case_sensitive": false,
                "description": "搜索.fit文件",
                "file_type": "fit"
            }
,
            {
                "type": "regex",
                "pattern": "\\d{8}/K\\d{3}/redux/GY\\d_K\\d{3}-.*?_pp\\.fits$",
                "case_sensitive": false,
                "description": "搜索redux目录下的_pp.fits文件",
                "file_type": "pp_fits"
            }
        ],
        "output_files": {
            "timeline_json": "vis_examples/examples/timeline/fits_data.json",
            "search_results": "fits_search_results.txt",
            "description": "输出文件路径配置"
        }
    }
}
